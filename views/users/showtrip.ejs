<%- include('../partial-user/header') %>

<h2>All <%= title %> Trips</h2>
<% if (trips.length > 0) { %> <% trips.forEach((trip) => { %>
<div class="trip">
  <p>Trip:</p>
  <p><%= trip.startCity %> ---> <%= trip.endCity %></p>
  <p>Date & Time:</p>
  <p><%= trip.date %> <%= trip.time %></p>
  <p>Driver Profile:</p>
  <p>Available Seats:</p>
  <p><%= trip.seats %></p>
  <p>Cost:</p>
  <p>$<%= trip.price %></p>
  <p>Pick Up Location:</p>
</div>
<% }); %> <% } else { %>
<p>You have no <%= title %> trips</p>
<% } %> <%- include('../partial-user/footer') %>
